<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.Views.InventoryManagementView"
             Title="Inventory Management"
             NavigatedTo="ContentPage_NavigatedTo">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Entry Text="{Binding Query}" Placeholder="Search inventory..."/>
            <Button Text="Search" 
                    Grid.Column="1" 
                    Clicked="SearchClicked"
                    Margin="5,0,0,0"/>
        </Grid>

        <!-- Inventory List -->
        <ListView Grid.Row="1"
                  ItemsSource="{Binding Inventory}"
                  SelectedItem="{Binding SelectedItem}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" 
                                   Text="{Binding Display}"
                                   VerticalOptions="Center"/>
                            <Button Grid.Column="1" 
                                    Text="Add" 
                                    Margin="5,0"/>
                            <Button Grid.Column="2" 
                                    Text="Edit" 
                                    Margin="5,0"/>
                            <Button Grid.Column="3" 
                                    Text="Delete" 
                                    Margin="5,0"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Bottom Actions -->
        <StackLayout Grid.Row="2" 
                     Orientation="Horizontal" 
                     HorizontalOptions="Center" 
                     Spacing="10"
                     Margin="0,10,0,0">
            <Button Text="Add" Clicked="AddClicked"/>
            <Button Text="Edit" Clicked="EditClicked"/>
            <Button Text="Delete" Clicked="DeleteClicked"/>
            <Button Text="Go Back" Clicked="CancelClicked"/>
        </StackLayout>
    </Grid>
</ContentPage>