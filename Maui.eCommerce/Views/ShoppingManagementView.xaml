<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Maui.eCommerce.ViewModels"
             xmlns:converters="clr-namespace:Maui.eCommerce.Converters"
             xmlns:converters1="clr-namespace:Maui.eCommerce.Converters;assembly=Library.eCommerce"
             x:Class="Maui.eCommerce.Views.ShoppingManagementView"
             Title="Shopping Cart">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters1:EnumToBoolConverter x:Key="EnumToBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Back Button -->
        <Button Grid.Row="0"
                Text="Go Back"
                Clicked="OnBackButtonClicked"
                HorizontalOptions="Start"
                Margin="10"
                HeightRequest="40"
                WidthRequest="100"/>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Store Section -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Label Grid.Row="0" 
                       Text="Available Items" 
                       FontSize="20" 
                       Margin="10"
                       HorizontalOptions="Center"/>
                
                <ListView Grid.Row="1"
                          ItemsSource="{Binding Inventory}"
                          SelectedItem="{Binding SelectedItem}"
                          SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" 
                                           Text="{Binding Model.Product.Name}"
                                           VerticalOptions="Center"/>
                                    <Label Grid.Column="1" 
                                           Text="{Binding Model.Product.Price, StringFormat='${0:F2}'}"
                                           Margin="0,0,10,0"
                                           VerticalOptions="Center"/>
                                    <Label Grid.Column="2" 
                                           Text="{Binding Model.Quantity, StringFormat='Qty: {0}'}"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                <Grid Grid.Row="2" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Entry Grid.Column="0"
                           Text="{Binding QuantityToAdd}"
                           Keyboard="Numeric"
                           WidthRequest="60"
                           Margin="0,0,10,0"/>
                           
                    <Button Grid.Column="1" 
                            Text="Add to Cart" 
                            Clicked="AddToCartClicked"/>
                </Grid>
            </Grid>

            <!-- Shopping Cart Section -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Label Grid.Row="0" 
                       Text="Shopping Cart" 
                       FontSize="20" 
                       Margin="10"
                       HorizontalOptions="Center"/>
                
                <Label Grid.Row="1" 
                       Text="{Binding ShoppingCart.Count, StringFormat='Items in cart: {0}'}"
                       Margin="10"
                       HorizontalOptions="Center"/>

                <!-- Sort Options -->
                <Grid Grid.Row="2" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackLayout Grid.Column="0" Orientation="Horizontal">
                        <Label Text="Sort by:" VerticalOptions="Center"/>
                        <RadioButton Content="Name" 
                                   IsChecked="{Binding SortBy, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static viewmodels:SortType.Name}}"
                                   GroupName="SortType"/>
                        <RadioButton Content="Price" 
                                   IsChecked="{Binding SortBy, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static viewmodels:SortType.Price}}"
                                   GroupName="SortType"/>
                    </StackLayout>
                    
                    <CheckBox Grid.Column="2" 
                             IsChecked="{Binding SortAscending}"
                             VerticalOptions="Center"/>
                    <Label Grid.Column="2" 
                           Text="Ascending" 
                           VerticalOptions="Center"
                           Margin="30,0,0,0"/>
                </Grid>
                
                <ListView Grid.Row="3"
                          ItemsSource="{Binding ShoppingCart}"
                          SelectedItem="{Binding SelectedCartItem}"
                          SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" 
                                           Text="{Binding Model.Product.Name}"
                                           VerticalOptions="Center"/>
                                    <Label Grid.Column="1" 
                                           Text="{Binding Model.Product.Price, StringFormat='${0:F2}'}"
                                           Margin="0,0,10,0"
                                           VerticalOptions="Center"/>
                                    <Label Grid.Column="2" 
                                           Text="{Binding Model.Quantity, StringFormat='Qty: {0}'}"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Totals Section -->
                <Frame Grid.Row="4" 
                       Margin="10"
                       Padding="15"
                       BorderColor="Gray"
                       BackgroundColor="#f0f0f0"
                       CornerRadius="5">
                    <Grid RowSpacing="5" ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Text="Subtotal:" 
                               Grid.Row="0" Grid.Column="0" 
                               HorizontalOptions="End"/>
                        <Label Text="{Binding Subtotal, StringFormat='${0:F2}'}" 
                               Grid.Row="0" Grid.Column="1"/>

                        <Label Text="Tax Rate:" 
                               Grid.Row="1" Grid.Column="0" 
                               HorizontalOptions="End"/>
                        <Label Text="{Binding TaxRate}" 
                               Grid.Row="1" Grid.Column="1"/>

                        <Label Text="Tax:" 
                               Grid.Row="2" Grid.Column="0" 
                               HorizontalOptions="End"/>
                        <Label Text="{Binding TaxAmount, StringFormat='${0:F2}'}" 
                               Grid.Row="2" Grid.Column="1"/>

                        <Label Text="Total:" 
                               Grid.Row="3" Grid.Column="0" 
                               FontAttributes="Bold"
                               HorizontalOptions="End"/>
                        <Label Text="{Binding Total, StringFormat='${0:F2}'}" 
                               Grid.Row="3" Grid.Column="1" 
                               FontAttributes="Bold"/>
                    </Grid>
                </Frame>
                
                <Button Grid.Row="5" 
                        Text="Remove from Cart" 
                        Clicked="RemoveFromCartClicked"
                        Margin="10"/>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>